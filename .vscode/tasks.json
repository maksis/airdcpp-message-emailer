{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "silent",
	"echoCommand": true,
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install",
			"args": ["install"]
		}, {
			"taskName": "update",
			"args": ["update"]
		}, {
			"taskName": "webpack",
			"args": ["run", "webpack"],
			"problemMatcher": "$tsc"
		}
	]
}